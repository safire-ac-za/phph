<script type="text/vnd.graphviz" id="cluster">
digraph G {
    rankdir=LR;
    node [nodesep=1, fontname=Helvetica, fontsize=12]

    edge [style=dotted, penwidth =3, color=green]

    <?= $helpers ?>

